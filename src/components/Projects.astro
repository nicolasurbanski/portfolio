---
import Card from "./Card.astro";

const projects = [
  {
    imgSrc: "/img/Eucalyptus.svg",
    href: "https://eucalyptus.urbanskinico.dev",
    target: "blank",
    title: "Eucalyptus",
    description: "Pagina prototipo de restaurant",
    appear: "appearL-on-scroll"
  },
  {
    imgSrc: "/img/NUlogo.png",
    title: "Dolor sit.",
    description: "cool description.",
    appear: "appearR-on-scroll"
  },
  {
    imgSrc: "/img/NUlogo.png",
    title: "Amet project.",
    description: "Some text here.",
    appear: "appearL-on-scroll"
  },
  {
    imgSrc: "/img/NUlogo.png",
    title: "Last card.",
    description: "final description",
    appear: "appearR-on-scroll"
  },
